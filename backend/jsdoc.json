{
	"source": {
		"include": ["."],
		"includePattern": ".+\\.js(doc|x)?$",
		"excludePattern": "(node_modules|docs|test)"
	},
	"plugins": ["plugins/markdown"],
	"templates": {
		"cleverLinks": true,
		"monospaceLinks": true
	},
	"opts": {
		"destination": "docs/",
		"encoding": "utf8",
		"recurse": true,
		"template": "node_modules/better-docs",
		"allowUnknownTags": true
	}
}
