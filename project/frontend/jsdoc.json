{
  "source": {
    "include": ["src"],
    "includePattern": ".+\\.js(js|svelte)?$",
    "excludePattern": "(node_modules|.svelte-kit|.git|static)_"
  },
  "plugins": ["plugins/markdown"],
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true
  },
  "opts": {
    "destination": "docs/",
    "encoding": "utf8",
    "recurse": true,
    "template": "node_modules/better-docs",
    "allowUnknownTags": true
  }
}
